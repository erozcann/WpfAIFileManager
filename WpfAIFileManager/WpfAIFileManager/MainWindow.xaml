<Window x:Class="WpfAIFileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yapay Zeka Dosya Yöneticisi" Height="350" Width="600">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Margin="0,0,10,0">

        <!-- Komut girme alanı -->
        <TextBox x:Name="CommandInput"
                 Height="30"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 ToolTip="Komut girin..." />

        <!-- Çalıştırma butonu -->
        <Button Content="Komutu Çalıştır"
                Height="35"
                Margin="0,10,0,0"
                Click="RunCommand" />

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar"
                     Height="20"
                     Margin="0,10,0,0"
                     Visibility="Collapsed" />

        <!-- Sonuç metni -->
        <ScrollViewer Height="200" 
                      Margin="0,10,0,0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="ResultText"
                       Text=""
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="DarkGreen" />
        </ScrollViewer>
        </StackPanel>

        <!-- Komut Geçmişi -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Komut Geçmişi" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <ListBox x:Name="CommandHistory"
                     Height="250"
                     FontSize="12"
                     SelectionChanged="CommandHistory_SelectionChanged" />
        </StackPanel>
    </Grid>
</Window>
